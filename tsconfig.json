{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["dom", "es2016", "esnext.asynciterable"],
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}